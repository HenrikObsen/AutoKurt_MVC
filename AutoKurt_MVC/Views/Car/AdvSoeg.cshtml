@model AKrepo.SoegViewModel

@{
    ViewBag.Title = "AdvSoeg";
}

<h2>Advanceret søgning</h2>

<form name="myForm" action="/Car/AdvSoeg/" enctype="multipart/form-data" method="post">
    <select name="producent">
        @{
            foreach (var prod in Model.Producenter)
            {
                <option value="@prod.ID">@prod.Navn</option>
            }
        }
    </select>
    <br />
    Max pris:<br /> <input type="text" id="maxpris" name="maxpris" rel="tekst" />
    <br />
    Søgeord:<br /> <input type="text" id="keyword" name="keyword" />
    <br />
    <input type="submit" value="Søg" />
</form>


@{
    if (Model.Biler != null)
    {

        if (Model.Biler.Count() > 0)
        {
            <ul>
                @foreach (var item in Model.Biler)
                {
                    <li>@item.Model</li>
                }
            </ul>
        }
        else
        {
            <p>Der blev ikke fundet noget på din søgning!</p>
        }
    }


}

